{
  "name": "bluejay",
  "version": "0.2.0",
  "description": "Build static pages with MDX, JSX/TSX components, and Bun.",
  "main": "src/main.ts",
  "type": "module",
  "types": "src/types.d.ts",
  "scripts": {
    "check": "bunx @biomejs/biome check --write",
    "format": "bunx @biomejs/biome format --write",
    "lint": "bunx @biomejs/biome lint --write",
    "dle": "BUILD_MODE=build bun test/main.tsx",
    "serve": "BUILD_MODE=serve bun --hot test/main.tsx"
  },
  "dependencies": {
    "@mdx-js/esbuild": "^3.0.1",
    "preact": "^10.23.1",
    "preact-render-to-string": "^6.5.7",
    "remark-gfm": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
