{
    "name": "bluejay",
    "description": "Create a book with MDX, JSX components, and Bun",
    "version": "0.1.0-beta",
    "main": "src/main.js",
    "typings": "src/main.d.ts",
    "files": ["init", "src", "tsconfig.json"],
    "bin": {
        "bluejay": "src/bin.js"
    },
    "type": "module",
    "scripts": {
        "lint": "bunx @biomejs/biome lint --write",
        "check": "bunx @biomejs/biome check --write",
        "format": "bunx @biomejs/biome format --write",
        "build": "START_NODE=build bun run test/main.tsx",
        "serve": "START_MODE=serve bun run test/main.tsx"
    },
    "dependencies": {
        "@mdx-js/esbuild": "^3.0.1",
        "preact": "^10.22.1",
        "preact-render-to-string": "^6.5.5",
        "remark-emoji": "^5.0.0",
        "remark-gfm": "^4.0.0"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@biomejs/biome": "^1.8.3"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    }
}
