{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "paths": {
            "~/*": ["./*"],
            "@preload/*": ["../../src/preload/*.ts"],
            "bluejay": ["../../src/main.ts"]
        }
    }
}
