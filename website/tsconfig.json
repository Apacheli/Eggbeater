{
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "paths": {
            "~/*": ["./*"],
            "@components/*": ["./src/components/*.tsx"],
            "@icons/*": ["./src/icons/*"],
            "bluejay": ["../src/main.ts"]
        }
    }
}
